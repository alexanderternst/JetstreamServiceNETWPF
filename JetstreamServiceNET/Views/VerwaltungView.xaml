<UserControl x:Class="JetstreamServiceNET.Views.VerwaltungView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JetstreamServiceNET.Views"
             xmlns:vm="clr-namespace:JetstreamServiceNET.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:VerwaltungModel />
    </UserControl.DataContext>

    <UserControl.InputBindings>
        <KeyBinding Command="{Binding CmdDelete}"
                    Key="d"
                    Modifiers="Ctrl" />
        <KeyBinding Command="{Binding CmdModify}"
                    Key="m"
                    Modifiers="Ctrl" />
        <KeyBinding Command="{Binding CmdRead}"
                    Key="r"
                    Modifiers="Ctrl" />
    </UserControl.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="2"
                  Margin="10"
                  Name="dgRegistrations"
                  AutoGenerateColumns="False"
                  CanUserResizeColumns="True"
                  ItemsSource="{Binding Mitarbeiter}"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"
                                    Binding="{Binding Id}" />
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}" />

                <DataGridTemplateColumn Header="Birthday">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding Birthday}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Command="{Binding CmdRead}">
                    <Image Source="../Print_11009.png" />
                </Button>
                <Button Command="{Binding CmdDelete}">
                    <Image Source="../Print_11009.png" />
                </Button>
                <Button Command="{Binding CmdModify}">
                    <Image Source="../Print_11009.png" />
                </Button>
            </ToolBar>
        </ToolBarTray>

        <TextBox
            Grid.Row="1"
            Margin="10"
            VerticalContentAlignment="Center"
            IsReadOnly="True">
            
        </TextBox>
    </Grid>
</UserControl>
